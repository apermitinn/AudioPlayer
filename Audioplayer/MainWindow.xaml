<Window x:Class="Audioplayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audioplayer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" Executed="OpenFile_Executed" CanExecute="OpenFile_CanExecute" />
        <CommandBinding Command="MediaCommands.Play" Executed="Play_Executed" CanExecute="Play_CanExecute" />
        <CommandBinding Command="MediaCommands.Pause" Executed="Pause_Executed" CanExecute="Pause_CanExecute" />
        <CommandBinding Command="MediaCommands.Stop" Executed="Stop_Executed" CanExecute="Stop_CanExecute" />
        <CommandBinding Command="MediaCommands.Rewind" Executed="Rewind_Executed" CanExecute="Rewind_CanExecute" />
    </Window.CommandBindings>
    <Grid>
        <MediaElement x:Name="mediaPlayer" LoadedBehavior="Manual" />
        <Button Content="Open file" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="68" Width="84" Command="ApplicationCommands.Open"/>
        <Button Content="Play" HorizontalAlignment="Left" Margin="10,149,0,0" VerticalAlignment="Top" Height="68" Width="84" Command="MediaCommands.Play"/>
        <Button Content="Pause" HorizontalAlignment="Left" Margin="99,149,0,0" VerticalAlignment="Top" Height="68" Width="84" Command="MediaCommands.Pause"/>
        <Button Content="Stop" HorizontalAlignment="Left" Margin="188,149,0,0" VerticalAlignment="Top" Height="68" Width="84" Command="MediaCommands.Stop"/>
        <Button Content="-5 sec" HorizontalAlignment="Left" Margin="10,222,0,0" VerticalAlignment="Top" Height="68" Width="84" Command="MediaCommands.Rewind" CommandParameter="-5"/>
        <Button Content="+5 sec" HorizontalAlignment="Left" Margin="188,222,0,0" VerticalAlignment="Top" Height="68" Width="84" Command="MediaCommands.Rewind" CommandParameter="5"/>
    </Grid>
</Window>
